<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_marginLeft="20sp"
            android:layout_height="40dp"
            android:text="Model" />

        <Spinner
            android:id="@+id/model"
            android:layout_width="250dp"
            android:layout_height="40dp"
           />

    </LinearLayout>


    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/registerno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Register No"
        android:inputType="textPersonName" />

    <CheckBox
        android:id="@+id/check_helmets"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Does Helmet to be carried by rider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/fare"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="FARE"
            android:inputType="text|number" />

        <TextView
            android:layout_width="150dp"
            android:layout_marginLeft="10sp"
            android:layout_height="match_parent"
            android:text="No. of Seats Available" />

        <Spinner
            android:id="@+id/ofrseats"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1" />

    </LinearLayout>


    <EditText
        android:id="@+id/make_category"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="1"
        android:hint="Make and category"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_add"
            android:layout_marginTop="40sp"
            android:layout_width="130sp"
            android:background="@color/btn_logut_bg"
            android:textColor="@color/white"
            android:layout_marginLeft="25sp"
            android:layout_height="wrap_content"
            android:text="Add" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="50sp"
            android:background="@color/btn_logut_bg"
            android:text="Cancel"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>